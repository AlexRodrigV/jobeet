<%= render 'home/navbar' %>

<h1 style="text-align: center; padding-top: 30px; padding-bottom: 30px;"><b><u>All users</u></b></h1>
<table class="table">
  <thead>
    <tr bgcolor="#D3D3D3" style="text-align: center;">
      <th scope="col">User</th>
      <th scope="col">Details</th>
    </tr>
  </thead>
  <tbody>
    <% @users.where(isRecruiter: false).each do |user| %>
      <tr>
        <td style="text-align: center;"><%= user.name %></td>
        <td style="text-align: center;"><button type="button" class="btn btn-success"><a style="color: #FFFFFF;" href="/profil/<%= user.id %>">See the user</a></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
