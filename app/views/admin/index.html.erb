<% if !GlobalData.find(1).isAdminConnected %>
  <div class="wrapper fadeInDown">
    <div id="formContent">
      <div class="fadeIn first">
        <h1>Admin Dashboard</h1>
      </div>
      <input type="text" id="login" class="fadeIn second" name="login" placeholder="login">
      <input type="password" id="pwd" class="fadeIn third" name="password" placeholder="password">
      <input type="submit" id="submitBtn" class="fadeIn fourth" value="Log In">
      <div id="formFooter">
        <a class="underlineHover" href="/">Go back to Jobeet</a>
      </div>
    </div>
  </div>
<% else %>
<%= render 'home/navbar' %>

<h1 style="text-align: center; padding-top: 30px; padding-bottom: 30px;"><b><u>Admin Dashboard</u></b></h1>
<p><h3>Offers</h3><p>
<table class="table">
  <thead>
    <tr bgcolor="#D3D3D3" style="text-align: center;">
      <th scope="col">Offer</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% Offer.all.each do |offer| %>
      <tr>
        <td style="text-align: center;"><%= offer.title %></td>
        <td style="text-align: center;"><button type="button" class="btn btn-success"><a style="color: #FFFFFF;" href="/enterprise/<%= offer.id %>">Manage the offer</a></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><h3>Users</h3><p>
<table class="table">
  <thead>
    <tr bgcolor="#D3D3D3" style="text-align: center;">
      <th scope="col">User</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% User.all.each do |user| %>
      <tr>
        <td style="text-align: center;"><%= user.name %></td>
        <td style="text-align: center;"><button type="button" class="btn btn-success"><a style="color: #FFFFFF;" href="/profil/<%= user.id %>">Manage the user</a></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    $('#submitBtn').click(function(evt) {
      $.post('/admin/connection', {
        login: document.getElementById("login").value,
        pwd: document.getElementById("pwd").value
      },function(response) {
        window.location.href="/admin";
      });
    });
  });
</script>


<style>

/* BASIC */

a {
  color: #92badd;
  display:inline-block;
  text-decoration: none;
  font-weight: 400;
}

h2 {
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  text-transform: uppercase;
  display:inline-block;
  margin: 40px 8px 10px 8px;
  color: #cccccc;
}



/* STRUCTURE */

.wrapper {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  min-height: 100%;
  padding: 20px;
}

#formContent {
  -webkit-border-radius: 10px 10px 10px 10px;
  border-radius: 10px 10px 10px 10px;
